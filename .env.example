# JIRA MCP Server Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# JIRA instance URL
# For Atlassian Cloud: https://your-domain.atlassian.net
# For Server/Data Center: https://jira.your-company.com
JIRA_URL=https://your-domain.atlassian.net

# JIRA username (your email for Atlassian Cloud)
JIRA_USERNAME=your-email@example.com

# JIRA API token (for Atlassian Cloud)
# Generate at: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_API_TOKEN=your-api-token-here

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Personal Access Token (for JIRA Server/Data Center)
# Use this instead of JIRA_USERNAME/JIRA_API_TOKEN for Server instances
# JIRA_PERSONAL_ACCESS_TOKEN=your-pat-here

# Read-only mode - when true, all write operations are disabled
# Useful for testing or when you only need to read JIRA data
JIRA_READ_ONLY=false

# Comma-separated list of enabled tools (empty = all tools enabled)
# Example: JIRA_ENABLED_TOOLS=jira_get_issue,jira_search,jira_get_transitions
JIRA_ENABLED_TOOLS=

# Logging level: DEBUG, INFO, WARNING, ERROR
JIRA_LOG_LEVEL=INFO

# Request timeout in seconds (5-300)
JIRA_TIMEOUT=30

# SSL certificate verification (set to false for self-signed certs)
JIRA_VERIFY_SSL=true

# Maximum retry attempts for failed requests (0-10)
JIRA_MAX_RETRIES=3
